[user]
  name  = Wes Edens
  email = wes.k.edens@gmail.com
[core]
  autocrlf     = input
  whitespace   = warn,space-before-tab,tab-in-indent,trailing-space
  excludesfile = ~/.gitignore_global
  deltaBaseCacheLimit = 1G
  editor = vim
[apply]
  whitespace = warn
[alias]
  br     = branch
  ci     = commit
  co     = checkout
  df     = diff
  g      = grep -I
  lg     = log -p
  gg     = log --decorate --oneline --graph --date-order --all
  rb     = rbranch
  rv     = review
  st     = status
  vd     = difftool -y -t vimdiff
  ctags  = "!sh -c '[ -f .git/hooks/ctags ] || git init; .git/hooks/ctags' git-ctags"
[branch "master"]
  remote = origin
  merge  = refs/heads/master
[color]
  ui     = true
  status = auto
[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old  = red bold
  new  = green bold
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[merge]
  tool = vimdiff
  log  = true
[diff]
  tool = vimdiff
[difftool "vimdiff"]
[rerere]
  enabled = 1
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"
[url "git://github.com/"]
  insteadOf = "github:"
[push]
  default = simple
[init]
  templatedir = ~/.git-template
